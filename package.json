{
  "name": "MQTTBox",
  "version": "0.2.2",
  "description": "MQTTBox - Developers helper program to create and test MQTT connectivity protocol.",
  "repository": {
    "type": "git",
    "url": "git@github.com:workswithweb/MQTTBox.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "vite",
    "electron": "electron .",
    "build": "vite build",
    "icons": "bash scripts/make-icns.sh",
    "pack:mac": "electron-packager . MQTTBox --platform=darwin --arch=x64 --overwrite --out=dist --app-version=$npm_package_version --icon=src/www/images/icon.icns",
    "dmg:mac": "bash -c 'set -e; APP=\"dist/MQTTBox-darwin-x64/MQTTBox.app\"; VER=\"$npm_package_version\"; OUT=\"dist/MQTTBox-$VER.dmg\"; TMP=\"dist/dmg-tmp\"; rm -rf \"$TMP\"; mkdir -p \"$TMP\"; cp -R \"$APP\" \"$TMP/\"; ln -s /Applications \"$TMP/Applications\"; hdiutil create -volname \"MQTTBox $VER\" -srcfolder \"$TMP\" -ov -format UDZO \"$OUT\"'",
    "dist:mac": "electron-builder --mac dmg",
    "dist:mac:x64": "electron-builder --mac dmg --x64",
    "dist:mac:arm64": "electron-builder --mac dmg --arm64"
  },
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-react": "^7.24.7",
    "@rollup/plugin-babel": "^6.0.4",
    "@vitejs/plugin-legacy": "^5.4.2",
    "@vitejs/plugin-react": "^4.3.1",
    "ansi-colors": "^4.1.3",
    "babel-cli": "^6.18.0",
    "babel-core": "6.20.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babelify": "7.3.0",
    "browser-sync": "2.18.2",
    "browserify": "13.1.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "fancy-log": "^2.0.0",
    "gulp": "3.9.1",
    "gulp-notify": "2.2.0",
    "pretty-hrtime": "1.0.3",
    "require-dir": "0.3.1",
    "underscore": "1.8.3",
    "vinyl-source-stream": "1.1.0",
    "vite": "^5.4.8",
    "watchify": "3.7.0"
  },
  "dependencies": {
    "compare-versions": "^6.1.1",
    "fixed-data-table": "0.6.3",
    "flux": "3.1.0",
    "getmac": "^6.6.0",
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mqtt": "3.0.0",
    "qlobber": "0.7.0",
    "react": "15.4.1",
    "react-copy-to-clipboard": "4.2.3",
    "react-dom": "15.4.1",
    "react-router": "3.0.0",
    "recharts": "0.19.0",
    "terser": "^5.44.0",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.mqttbox.app",
    "productName": "MQTTBox",
    "files": [
      "build/**",
      "main.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "src/www/images/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
